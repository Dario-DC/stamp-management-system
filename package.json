{
  "name": "stamp-management-system",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:backend": "vitest --config vitest.backend.config.js",
    "test:backend:run": "vitest run --config vitest.backend.config.js",
    "test:all": "npm run test:run && npm run test:backend:run",
    "test:api": "node test-api.js",
    "server": "node backend/server.js",
    "server:dev": "nodemon backend/server.js",
    "start": "concurrently \"npm run server:dev\" \"npm run dev\""
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "concurrently": "^8.2.2",
    "jsdom": "^25.0.0",
    "nodemon": "^3.0.2",
    "vite": "^7.1.7",
    "vitest": "^3.2.4",
    "supertest": "^7.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^9.6.0",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0"
  }
}
